import { useState } from "react";
import Papa from "papaparse";
import { Upload, FileText, CheckCircle2 } from "lucide-react"; // iconos bonitos

const GenerarPerfiles = () => {
  const [data, setData] = useState([]);
  const [fileName, setFileName] = useState("");
  const [success, setSuccess] = useState(false);

  const handleFileUpload = (e) => {
    const file = e.target.files[0];
    if (!file) return;

    setFileName(file.name);
    setSuccess(false);

    Papa.parse(file, {
      header: true,
      skipEmptyLines: true,
      complete: (result) => {
        setData(result.data);
      },
    });
  };

  const handleGenerateProfiles = () => {
    if (data.length === 0) {
      alert("⚠️ Primero debes subir un archivo con datos.");
      return;
    }
    setSuccess(true);
    console.log("✅ Perfiles generados:", data);
  };

  return (
    <div className="min-h-screen bg-gradient-to-br from-gray-50 to-blue-50 py-10 px-6">
      <div className="max-w-5xl mx-auto bg-white shadow-lg rounded-2xl p-8 border border-gray-100">
        <h1 className="text-4xl font-bold text-gray-800 mb-6 text-center">
          Generar Perfiles de Instructores
        </h1>
        <p className="text-gray-500 text-center mb-8">
          Sube un archivo CSV con los datos de los instructores para generar sus perfiles.
        </p>
        
//Area para subir archivo
        <div className="flex flex-col items-center justify-center gap-5 border-2 border-dashed border-blue-300 rounded-xl py-10 bg-blue-50/30 hover:bg-blue-50 transition">
          <Upload className="w-12 h-12 text-blue-500" />
          <label className="cursor-pointer">
            <input
              type="file"
              accept=".csv"
              onChange={handleFileUpload}
              className="hidden"
            />
            <span className="px-5 py-2 bg-blue-600 text-white rounded-lg shadow hover:bg-blue-700 transition">
              Seleccionar archivo
            </span>
          </label>

          {fileName && (
            <div className="flex items-center gap-2 text-sm text-gray-600">
              <FileText className="w-4 h-4 text-blue-500" />
              <span>Archivo seleccionado: {fileName}</span>
            </div>
          )}
        </div>

        {/* Botón generar */}
        <div className="text-center mt-6">
          <button
            onClick={handleGenerateProfiles}
            className="px-8 py-3 bg-gradient-to-r from-blue-600 to-indigo-600 text-white font-medium rounded-lg shadow hover:shadow-lg hover:scale-[1.02] transition"
          >
            Generar Perfiles
          </button>

          {success && (
            <div className="mt-4 flex items-center justify-center gap-2 text-green-600 font-semibold">
              <CheckCircle2 className="w-5 h-5" />
              <span>Perfiles generados correctamente</span>
            </div>
          )}
        </div>


// Tabla de datos
        {data.length > 0 && (
          <div className="mt-10 overflow-x-auto animate-fadeIn">
            <table className="min-w-full border border-gray-200 rounded-lg overflow-hidden shadow-sm">
              <thead className="bg-blue-600 text-white">
                <tr>
                  {Object.keys(data[0]).map((key) => (
                    <th
                      key={key}
                      className="px-4 py-2 text-left text-sm uppercase tracking-wider font-semibold"
                    >
                      {key}
                    </th>
                  ))}
                </tr>
              </thead>
              <tbody>
                {data.map((row, idx) => (
                  <tr
                    key={idx}
                    className={`${
                      idx % 2 === 0 ? "bg-white" : "bg-blue-50"
                    } hover:bg-blue-100 transition`}
                  >
                    {Object.values(row).map((value, i) => (
                      <td key={i} className="px-4 py-2 text-sm text-gray-700 border-b">
                        {value}
                      </td>
                    ))}
                  </tr>
                ))}
              </tbody>
            </table>
          </div>
        )}
      </div>
    </div>
  );
};

export default GenerarPerfiles;
